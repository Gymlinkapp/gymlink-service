{
  "plugins": ["import"],
  "rules": {
    "import/no-unused-modules": [
      1,
      {
        "unusedExports": true,
        "ignoreExports": ["*.config.js", "*.test.js"],
        "src": ["./src/**/*.{js,jsx,ts,tsx}"]
      }
    ],
    "import/no-extraneous-dependencies": 2,
    "import/no-unresolved": 2,
    "import/named": 2,
    "import/namespace": 2,
    "import/default": 2,
    "import/export": 2
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  }
}
